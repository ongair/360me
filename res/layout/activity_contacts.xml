<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_company_background" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/action_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:background="#fcfcfc"
            android:weightSum="100"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/action_image"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="10"
                android:src="@drawable/icon_back_32" />

            <TextView
                android:id="@+id/action_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_horizontal"
                android:text="Choose Contact"
                android:layout_weight="80"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#5d6260"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/action_add"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="10"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_addleads_selected_32" />

        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/action_layout"
            android:background="#d1d2d4" />

        <EditText
            android:id="@+id/contact_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/view1"
            android:background="@color/app_pure_white"
            android:drawableLeft="@drawable/search_icon"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="@string/search_contact"
            android:minHeight="40dp"
            android:padding="5dp"
            android:textColor="@color/app_white" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/contact_search"
            android:background="#d1d2d4" />

        <ListView
            android:id="@+id/contact_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/view2"
            android:layout_marginTop="1dp"
            android:fadeScrollbars="true"
            android:fastScrollEnabled="true"
            android:scrollbarSize="30dp"
            android:scrollbarStyle="insideOverlay"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
            android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
            tools:listitem="@layout/contact_list_holder" >
        </ListView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <View
            android:id="@+id/View02"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#d1d2d4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#fcfcfc"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lead_section_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@drawable/lead_nav_selector"
                android:clickable="true"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/icon_notification_32"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="@string/notification"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/login_btn_text"
                android:textSize="12sp" >
            </TextView>

            <View
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#c8cacc" />

            <TextView
                android:id="@+id/lead_section_add_lead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@drawable/lead_nav_selector"
                android:clickable="true"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/icon_addleads_selected_32"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="@string/add_lead"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/notification_selected"
                android:textSize="12sp" >
            </TextView>

            <View
                android:id="@+id/View01"
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#c8cacc" />

            <TextView
                android:id="@+id/lead_section_my_leads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@drawable/lead_nav_selector"
                android:clickable="true"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/icon_myleads_32"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="@string/my_leads"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/login_btn_text"
                android:textSize="12sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/lead_notification_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/image_shape_noti"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:text="3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/app_pure_white"
        android:textStyle="bold" />

</FrameLayout>