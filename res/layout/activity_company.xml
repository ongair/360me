<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/app_background" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" >
		
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/swipe_left_for_tour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal"
                android:text="@string/swipe_left"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/login_btn_text" />

            <android.support.v4.view.ViewPager
                android:id="@+id/cpager"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/logged_button_lay_shape" >
            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/action_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fcfcfc"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/action_image"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_back_32" />

            <TextView
                android:id="@+id/action_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_horizontal"
                android:text="Choose Company"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#5d6260"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d1d2d4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:background="#fcfcfc"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lead_section_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:background="@drawable/lead_nav_selector"
            android:clickable="true"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/icon_notification_32"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="@string/notification"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/login_btn_text"
            android:textSize="12sp" >
        </TextView>

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="#c8cacc" />

        <TextView
            android:id="@+id/lead_section_add_lead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:background="@drawable/lead_nav_selector"
            android:clickable="true"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/icon_addleads_selected_32"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="@string/add_lead"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/notification_selected"
            android:textSize="12sp" >
        </TextView>

        <View
            android:id="@+id/View01"
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="#c8cacc" />

        <TextView
            android:id="@+id/lead_section_my_leads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:background="@drawable/lead_nav_selector"
            android:clickable="true"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/icon_myleads_32"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="@string/my_leads"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/login_btn_text"
            android:textSize="12sp" >
        </TextView>
    </LinearLayout>
    
	<TextView
        android:id="@+id/lead_notification_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/image_shape_noti"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:text="3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/app_pure_white"
        android:textStyle="bold" />
	
</FrameLayout>